<h2>My Purchased Books</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @purchases.each do |purchase| %>
      <tr id="purchase_<%= purchase.id %>">
        <td><%= purchase.book_name %></td>
        <td><%= purchase.book_author %></td>
        <td><%= link_to 'Erase Transaction',purchase, method: :delete, data: { confirm: 'Are you sure? You will not receive a payback' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div id="buyForm">
</div>

<!-- Modal -->
<div class="modal fade" id="buyModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Finish your Purchase</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p id="book_id_p"></p>
      </div>
    </div>
  </div>
</div>