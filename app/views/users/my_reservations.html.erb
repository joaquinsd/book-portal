<h2>My Reserved Books</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @reservations.each do |reservation| %>
      <tr id="reservation_<%= reservation.id %>">
        <td><%= reservation.book.name %></td>
        <td><%= reservation.book.author %></td>
        <td><%= link_to 'Cancel Reservation',reservation, method: :delete, remote: true %></td>
        <td><%= link_to 'Buy this Book', new_sale_path(reservation_id: reservation.id),remote: true %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="buyModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Finish your Purchase</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p id="book_id_p"></p>
      </div>
    </div>
  </div>
</div>
